<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_margin="16dp" >

  <TextView
    android:id="@+id/decrypt_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    android:text="String to Decrypt"
    android:textSize="20sp" />

  <TextView
    android:id="@+id/decrypt_input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@id/decrypt_title"
    android:textSize="16sp" />

  <EditText
    android:id="@+id/decrypt_password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/decrypt_input"
    android:hint="Password" />

  <Button
    android:id="@+id/decrypt_decrypt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/decrypt_password"
    android:text="Decrypt" />

  <TextView
    android:id="@+id/decrypt_output"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/decrypt_decrypt"
    android:textSize="16sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
